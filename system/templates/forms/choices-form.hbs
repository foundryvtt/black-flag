<form class="{{cssClass}} flexcol" autocomplete="off">

    {{!-- Sheet Header --}}
    <header class="sheet-header flexrow">
        <img class="profile" src="{{document.img}}" title="{{document.name}}" data-edit="img"/>
        <h1 class="title">
            <input name="name" type="text" value="{{document.name}}" placeholder="{{localize "BlackFlag.Character.TalentName"}}"/>
        </h1>
    </header>


    {{!-- Main Content --}}
    <section class="sheet-body flexcol">
        {{!-- Description --}}
        <p class="description" name="description">{{{document.description}}}</p>
        <p class="description hint">{{document.mode}}</p>

        {{!-- Choices --}}
        {{#each this.document.choices}}
            <fieldset data-key="{{this.key}}" data-amount="{{this.amount}}">
                <legend>{{this.label}}</legend>
                <p class="hint">Pick {{this.amount}} from the following choices.</p>

                {{!-- Choices --}}
                {{#each this.values }}
                    <div class="form-group">
                        <label>{{typeLabel ../category this.value}}</label>
                        <input type="checkbox" name="{{../key}}.{{this.value}}" {{checked this.selected}} {{#if this.disabled}}disabled{{/if}} />
                    </div>
                {{/each}}
            </fieldset>
        {{/each}}

        {{!-- Save Changes --}}
        <footer>
            <button type="submit">{{localize "BlackFlag.Common.SaveChoices"}}</button>
        </footer>
    </section>
</form>
