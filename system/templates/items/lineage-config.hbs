<form class="{{cssClass}} flexcol" autocomplete="off">

    {{!-- Sheet Header --}}
    <header class="sheet-header flexrow">
        <img class="profile" src="{{document.img}}" title="{{document.name}}" data-edit="img"/>
        <h1 class="title">
            <input name="name" type="text" value="{{document.name}}" placeholder="{{localize "BlackFlag.Character.RaceName"}}"/>
        </h1>
        <div class="form-group">
            <div class="form-fields">
                {{colorPicker name="system.color" value=document.system.color}}
            </div>
        </div>
    </header>

    {{!-- Description Tab --}}
    <section class="sheet-body">

        {{!-- Description --}}
        <div class="form-group stacked" data-name="system.description">
            <label>{{ localize "BlackFlag.Character.LineageDescription" }}</label>
            {{editor descriptionHTML target="system.description" button=false editable=editable engine="prosemirror" collaborate=false}}
        </div>

        <fieldset>
            <legend>{{ localize "BlackFlag.Character.HereditaryTraits" }}</legend>

            {{!-- Age --}}
            <div class="form-group" data-name="system.age">
                <label>{{ localize "BlackFlag.Character.LineageAge" }}</label>
                <textarea name="system.age" rows=2 type="text" placeholder="{{localize "BlackFlag.Character.LineageAge"}}">{{document.system.age}}</textarea>
            </div>

            {{!-- Size Description --}}
            <div class="form-group" data-name="system.size.description">
                <label>{{ localize "BlackFlag.Character.LineageSizeInfo" }}</label>
                <textarea name="system.size.description" rows=2 type="text" placeholder="{{localize "BlackFlag.Character.LineageSize"}}">{{document.system.size.description}}</textarea>
            </div>

            {{!-- Size --}}
            <div class="form-group" data-name="system.size.type">
                <label>{{ localize "BlackFlag.Character.LineageSize" }}</label>
                <select name="system.size.type">
                    {{selectOptions SIZE_TYPES selected=document.system.size.type}}
                </select>
            </div>

            {{!-- Speed --}}
            <div class="form-group" data-name="system.speed">
                <label>{{ localize "BlackFlag.Character.LineageSpeed" }} <span class="units">({{localize "BlackFlag.Common.Units.Speed.Feet"}})</span></label>
                <input name="system.speed" type="number" value="{{document.system.speed}}" placeholder="{{localize "BlackFlag.Character.LineageSpeed"}}"/>
            </div>

            <fieldset>
                <legend>{{localize "BlackFlag.Character.LineageSight"}}</legend>

                {{!-- Sight Description --}}
                <div class="form-group" data-name="system.sight.description">
                    <label>{{ localize "BlackFlag.Common.Info" }}</label>
                    <textarea name="system.sight.description" rows=2 type="text" placeholder="BlackFlag.Character.LineageSight">{{document.system.sight.description}}</textarea>
                </div>

                {{!-- Bright --}}
                <div class="form-group" data-name="system.sight.bright">
                    <label>{{ localize "BlackFlag.Character.LineageBrightVision" }} <span class="units">({{localize "BlackFlag.Common.Units.Distance.Feet"}})</span></label>
                    <input name="system.sight.bright" type="number" value="{{document.system.sight.bright}}" placeholder="{{localize "BlackFlag.Character.LineageBrightVision"}}"/>
                </div>

                {{!-- Dim --}}
                <div class="form-group" data-name="system.sight.dim">
                    <label>{{ localize "BlackFlag.Character.LineageDimVision" }} <span class="units">({{localize "BlackFlag.Common.Units.Distance.Feet"}})</span></label>
                    <input name="system.sight.dim" type="number" value="{{document.system.sight.dim}}" placeholder="{{localize "BlackFlag.Character.LineageDimVision"}}"/>
                </div>

                {{!-- Dark --}}
                <div class="form-group" data-name="system.sight.dark">
                    <label>{{ localize "BlackFlag.Character.LineageDarkVision" }} <span class="units">({{localize "BlackFlag.Common.Units.Distance.Feet"}})</span></label>
                    <input name="system.sight.dark" type="number" value="{{document.system.sight.dark}}" placeholder="{{localize "BlackFlag.Character.LineageDarkVision"}}"/>
                </div>

            </fieldset>
        </fieldset>

        <hr>

        {{!-- Traits --}}
        <div class="form-group stacked">
            <div class="header flexrow">
                <h3>{{ localize "BlackFlag.Character.Traits" }}</h3>
                {{#if owner}}
                    <div class="item-controls">
                        <a class="item-control trait-create" data-tooltip="{{localize "BlackFlag.CharacterBuilder.CreateElement" elem='({{localize "BlackFlag.Character.Trait"}})'}}">
                            <i class="fas fa-plus"></i> {{localize "BlackFlag.Common.Add"}}
                        </a>
                    </div>
                {{/if}}
            </div>

            <ul class="directory-list">
                {{#each document.system.traits as |trait t|}}
                    <li class="trait flexrow" data-trait-id="{{trait.id}}">
                        <div class="trait-header flexrow" data-tooltip="{{trait.name}}">
                            <img class="trait-icon" src="{{trait.img}}"/>
                            <h4 class="trait-name">{{truncate trait.name 25}}</h4>
                        </div>
                        <div class="description" data-tooltip="{{{trait.description}}}">{{truncate trait.description 50}}</div>
                        {{#if ../owner}}
                            <div class="item-controls">
                                <a class="item-control trait-edit" data-tooltip="{{localize "BlackFlag.Common.Edit"}}"><i class="fas fa-edit"></i></a>
                                <a class="item-control trait-delete" data-tooltip="{{localize "BlackFlag.Common.Delete"}}"><i class="fas fa-trash"></i></a>
                            </div>
                        {{/if}}
                    </li>
                {{/each}}
            </ul>
        </div>
    </section>

    {{!-- Save Changes --}}
    <footer>
        <button type="submit">{{localize "BlackFlag.Common.Save"}}</button>
    </footer>
</form>
